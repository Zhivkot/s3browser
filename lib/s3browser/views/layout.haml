!!! 5
%html
  %head
    %meta{:charset => 'utf-8'}
    %title
      S3Browser 
      - if defined? title
        = "- #{title}"
    %meta{:name => "description", :content => ""}
    %meta{:name => "author", :content => ""}

    :plain
      <!--[if IE9]>
        <script src="//oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="//oss.maxcdn.com/libs/respond/1.4.2/respond.min.js"></script>
      <![endif]-->

    / Le styles
    %link{ href: '//maxcdn.bootstrapcdn.com/bootswatch/3.3.4/flatly/bootstrap.min.css', type: 'text/css', rel: 'stylesheet' }
    %link{ href: '//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css', type: 'text/css', rel: 'stylesheet' }

  %body
    - if defined? title
      .container
        .page-header
          %h1= title

    .container
      = haml :flash_messages

      = yield

    %hr

    / Placed at the end of the document so the pages load faster
    %script{ type: 'text/javascript', src: '//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js' }
    %script{ type: 'text/javascript', src: '//maps.googleapis.com/maps/api/js?libraries=places' }
    %script{ type: 'text/javascript', src: '//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js' }

